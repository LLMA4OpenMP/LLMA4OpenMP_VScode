{
	"name": "vscomp",
	"displayName": "VscOMP",
	"description": "VscOMP - AI powered assistant to help you parallelize your code.",
	"version": "0.23.0",
	"publisher": "VscOMP",
	"license": "MIT",
	"authors": [
		[
			{
				"name": "LLMA4OpenMP",
				"email": "none"
			}
		]
	],
	"icon": "media/icon.png",
	"galleryBanner": {
		"color": "#262626",
		"theme": "dark"
	},
	"contributors": [
		{
			"name": "LLMA4OpenMP",
			"email": "none"
		}
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/LLMA4OpenMP/LLMA4OpenMP"
	},
	"engines": {
		"vscode": "^1.87.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Machine Learning",
		"Education"
	],
	"pricing": "Free",
	"keywords": [
		"ai",
		"chatgpt",
		"copilot",
		"intellisense",
		"openai",
		"gpt",
		"chat",
		"ollama",
		"code assistant"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"icons": {
			"vscomp-logo": {
				"description": "VscOMP icon",
				"default": {
					"fontPath": "media/wingman.woff",
					"fontCharacter": "\\e900"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vscomp",
					"title": "VscOMP",
					"icon": "media/wingman-logo.png"
				}
			],
			"panel": [
				{
					"id": "vscomp-config",
					"title": "VscOMP Config",
					"icon": "media/wingman-logo.png"
				}
			]
		},
		"views": {
			"vscomp": [
				{
					"id": "vscomp-chat-view",
					"name": "We've got your back!",
					"type": "webview"
				}
			],
			"vscomp-config": [
				{
					"id": "vscomp.configview",
					"name": "VscOMP Config",
					"type": "webview"
				}
			]
		},
		"configuration": {
			"title": "VscOMP",
			"properties": {
				"VscOMP.Provider": {
					"type": "string",
					"default": "Ollama",
					"enum": [
						"Ollama",
						"OpenAI"
					],
					"description": "Specifies which AI provider to use - some require configuration."
				},
				"VscOMP.InteractionSettings": {
					"type": "object",
					"description": "Interaction settings help configure how parts of the extension interact with the LLM(s).",
					"default": {
						"chatContextWindow": -1
					},
					"properties": {
						"chatContextWindow": {
							"type": "number",
							"default": -1,
							"description": "The default context window size for chat, -1 is infinite."
						}
					}
				},
				"VscOMP.Ollama": {
					"type": "object",
					"description": "Ollama settings",
					"default": {
						"chatModel": "deepseek-coder:6.7b-instruct-q8_0",
						"baseUrl": "http://localhost:11434",
						"apiPath": "/api/generate",
						"modelInfoPath": "/api/show"
					},
					"properties": {
						"chatModel": {
							"type": "string",
							"default": "deepseek-coder:6.7b-instruct-q8_0",
							"description": "The model to use for the chat"
						},
						"codeModel": {
							"type": "string",
							"default": "deepseek-coder:6.7b-base-q8_0",
							"description": "The model to use for the code completion"
						},
						"baseUrl": {
							"type": "string",
							"default": "http://localhost:11434",
							"description": "Base URL for the ollama instance"
						},
						"apiPath": {
							"type": "string",
							"default": "/api/generate",
							"description": "Path for generation"
						},
						"modelInfoPath": {
							"type": "string",
							"default": "/api/show",
							"description": "Path for model info"
						}
					}
				},
				"VscOMP.OpenAI": {
					"type": "object",
					"description": "OpenAI settings",
					"default": {
						"chatModel": "gpt-4-0125-preview",
						"baseUrl": "https://api.openai.com/v1/chat/completions",
						"apiKey": "ADD ME"
					},
					"properties": {
						"chatModel": {
							"type": "string",
							"default": "gpt-4-0125-preview",
							"description": "The model to use for the chat"
						},
						"codeModel": {
							"type": "string",
							"default": "gpt-4-0125-preview",
							"description": "The model to use for the code completion"
						},
						"baseUrl": {
							"type": "string",
							"default": "https://api.openai.com/v1/chat/completions",
							"description": "Base URL for the OpenAI API"
						},
						"apiKey": {
							"type": "string",
							"default": "ADD ME",
							"description": "The API key to use for OpenAI"
						}
					}
				}
			}
		},
		"commands": [
			{
				"command": "vscompai.refactorcode",
				"title": "Refactor Code"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "vite build",
		"watch": "vite build --watch",
		"package": "npm run build-wasm && vite build --mode production",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test",
		"build-wasm": "ts-node src/.wasm/buildWasm.ts && cp node_modules/web-tree-sitter/tree-sitter.wasm src/.wasm/",
		"license": "generate-license-file --input package.json --output third-party-licenses.txt --overwrite"
	},
	"devDependencies": {
		"@types/mocha": "10.0.6",
		"@types/node": "18.x",
		"@types/react": "18.2.42",
		"@types/react-dom": "18.2.17",
		"@types/react-syntax-highlighter": "15.5.11",
		"@types/vscode": "1.87.0",
		"@types/vscode-webview": "1.57.5",
		"@typescript-eslint/eslint-plugin": "6.13.1",
		"@typescript-eslint/parser": "6.13.1",
		"@vscode/codicons": "0.0.35",
		"@vscode/test-cli": "0.0.4",
		"@vscode/test-electron": "2.3.8",
		"@vscode/webview-ui-toolkit": "1.3.1",
		"eslint": "^8.54.0",
		"generate-license-file": "3.0.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-icons": "4.12.0",
		"react-markdown": "9.0.1",
		"react-syntax-highlighter": "15.5.0",
		"styled-components": "6.1.1",
		"tar": "6.2.0",
		"tree-sitter-c": "^0.21.4",
		"tree-sitter-cli": "^0.22.6",
		"tree-sitter-cpp": "^0.22.2",
		"ts-node": "^10.9.2",
		"typescript": "5.3.2",
		"vite": "5.3.1",
		"vite-plugin-static-copy": "^1.0.5"
	},
	"dependencies": {
		"jsonc-parser": "^3.2.1",
		"web-tree-sitter": "^0.22.6"
	}
}
